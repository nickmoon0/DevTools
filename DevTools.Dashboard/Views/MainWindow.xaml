<Window x:Class="DevTools.Dashboard.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:DevTools.Dashboard.Views"
        mc:Ignorable="d"
        Title="Dev Tools Dashboard" Height="600" Width="1000"
        Background="#FF2E2E2E"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">
  
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sidebar column -->
            <ColumnDefinition Width="250"/>
            <!-- Main content column -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
    
        <!-- Sidebar placed in the first column -->
        <views:SidebarMenu Grid.Column="0" DevTools="{Binding DevTools}" />
    
        <!-- Main content area in the second column -->
        <ContentControl Grid.Column="1" x:Name="MainContent" Background="#FF252525"/>
    </Grid>
</Window>