<Window x:Class="DevTools.Dashboard.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:DevTools.Dashboard.Views"
        mc:Ignorable="d"
        Title="Dev Tools Dashboard" Height="600" Width="1000"
        Background="#FF2E2E2E"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">
  
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sidebar column reduced from 500 to 350 -->
            <ColumnDefinition Width="300"/>
            <!-- Main content column -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
    
        <!-- Sidebar placed in the first column -->
        <views:SidebarMenu x:Name="Sidebar" Grid.Column="0" HorizontalAlignment="Stretch"/>
    
        <!-- Main content area in the second column -->
        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="{Binding SelectedDevTool.DisplayName, ElementName=Sidebar}" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>