<UserControl x:Class="DevTools.Dashboard.Views.SidebarMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DevTools.Dashboard.Views"
             xmlns:tooling="clr-namespace:DevTools.Tooling;assembly=DevTools.Tooling"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <!-- Data template for displaying each IDevTool -->
        <DataTemplate x:Key="DevToolTemplate" DataType="{x:Type tooling:IDevTool}">
            <Border Margin="5" Padding="10" Background="Transparent" CornerRadius="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Placeholder for an icon (if available) -->
                    <Ellipse Width="24" Height="24" Fill="LightGray" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="1"
                               Text="{Binding DisplayName}" 
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"
                               Foreground="White"
                               FontWeight="SemiBold"/>
                </Grid>
            </Border>
        </DataTemplate>
        <!-- Style for ListBoxItems to provide modern hover and selected effects -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF3E3E3E"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF2D2D30"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Border Background="#FF1E1E1E" Padding="10">
        <StackPanel>
            <!-- ListBox bound to the DevTools collection -->
            <ListBox ItemsSource="{Binding DevTools, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                     ItemTemplate="{StaticResource DevToolTemplate}"
                     BorderThickness="0" 
                     Background="Transparent" />
        </StackPanel>
    </Border>
</UserControl>
